#!/usr/bin/env python3

import os
import nt.meta
import nt.argparser
from nt.config import load_config

parser, args = nt.argparser.parse_args()

cfg = load_config()

if not os.path.exists(os.path.expanduser(cfg.data_directory)):
  os.mkdir(os.path.expanduser(cfg.data_directory))

if args.version:
  print('nt version {}'.format(nt.meta.VERSION))
  print('  data: {}'.format(cfg.data_directory))
